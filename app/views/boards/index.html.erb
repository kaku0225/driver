<%= flash[:notice] %>
<h1>嗨，妳好</h1>


<table>
  <% @boards.each do |board| %>
  <tr>
    <td><%= board.title %></td>
    <td><%= link_to '編輯', edit_board_path(board) %></td>
    <td><%= link_to '刪除', board_path(board), method: 'delete', data: {confirm: '確定刪除？'} %></td>
  </tr>
  <% end %>
</table>

<%= link_to '新增文章', new_board_path %>


<div>
  <% if current_user %>
    <%= current_user.nickname %>
    <%= link_to '登出', logout_users_path, method: 'delete' %>
    <% if current_user.role == 'driver' %>
      <%= link_to '開始外送', '#' %>
    <% else %>
      <%= link_to '成為外送員', new_drivers_path %>
    <% end %>
  <% else %>
    <%= link_to '註冊', sign_up_users_path %>
    <%= link_to '登入', sign_in_users_path %>
  <% end %>
</div>